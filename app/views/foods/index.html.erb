<div class="d-flex flex-column align-items-center">
  <div class="add-btn">
      <%= link_to({ controller: "foods", action: "new"}) do %>
          <%= link_to "Add food", new_food_path, class: "btn border px-4 py-1 bg-dark text-white" %>
      <% end %>
  </div>

  <table class="table table-striped w-75">
      <tr>
        <th scpoe="col">Food</th>
        <th scpoe="col">Maesurment unit</th>
        <th scpoe="col">Unit Price</th>
        <th scpoe="col">Actions</th>
      </tr>
    <tbody>
      <% @foods.each do |food| %>
        <tr scpoe="row">
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td>
            <% if can? :destroy, food %>
              <%= button_to 'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
