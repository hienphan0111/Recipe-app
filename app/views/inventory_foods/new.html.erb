<div class="container d-flex flex-column justify-content-center">
  <%= form_with model: InventoryFood.new, url: inventory_inventory_foods_path(@inv) do |form| %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message.inspect %></div>
        <% end %>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :Add_food, class: 'form-label' %>
      <%= form.collection_select :food_id, Food.all , :id, :name, {prompt: "Select Ingedient"}, {class: "form-select mb-3"} %>
    </div>
    <div class="mb-3">
      <%= form.label :quantity, class: 'form-label' %>
      <%= form.number_field :quantity, step: :any, required:true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.submit 'Add food', class: "btn btn-primary bg-gradient"%>
    </div>
  <%end%>
  <hr />
  <%= render partial: 'list_foods', locals: { inv: @inv } %>
</div>
